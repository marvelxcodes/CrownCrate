{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crowncrate",
  "version": "0.1.0",
  "identifier": "com.crowncrate.app",
  "build": {
    "beforeDevCommand": "bun vite",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CrownCrate",
        "url": "http://localhost:1420",
        "resizable": true,
        "width": 900,
        "height": 600,
        "transparent": true,
        "decorations": false
        }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
